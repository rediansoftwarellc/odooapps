<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="in_consultation" string="In Consultation" type="object" class="oe_highlight"
                            states="draft"/>
                    <button name="mark_as_done" string="Mark as Done" type="object" class="oe_highlight"
                            states="in_consultation"/>
                    <button name="cancelled" string="Cancelled" type="object" class="oe_highlight"
                            states="draft,in_consultation"/>
                    <button name="patient_action" string="Action Button"
                            help="On clicking this button, you will be redirected to patient records"
                            confirm="Are you sure to open the patient action ?"
                            type="object" class="oe_highlight"/>
                    <button name="send_appointment_email" string="Send Appointment Email" type="object" class="btn-primary" states="draft" attrs="{'invisible': [('email', '=', False)]}"/>
                    <field name="state" widget="statusbar" nolabel="1" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="ref"/>
                            <field name="doctor_id" widget="many2one_avatar"/>
                            <field name="gender"/>
                            <field name="booking_date"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <field name="appointment_time"/>
                            <field name="email"/>

                        </group>
                    </group>
                    <notebook>
                        <page string="Prescription" name="prescription">
                            <field name="prescription" options="{'collaborative': true}"/>
                        </page>
                        <page string="Pharmacy" name="pharmacy">
                            <field name="pharmacy_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="price_unit"/>
                                    <field name="qty"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="price_unit"/>
                                        <field name="qty"/>

                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="appointment_time" invisible="1"/>
                    <field name="ref" invisible="1"/>
                </div>
            </form>
        </field>
    </record>


    <record id="view_hospital_appointment_calendar" model="ir.ui.view">
        <field name="name">hospital.appointment.calendar</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments" date_start="booking_date" mode="month"
                      color="state" quick_add="False" event_open_popup="True"
                      form_view_id="%(om_hospital.view_hospital_appointment_form)d">
                <field name="patient_id" filters="1" avatar_field="image"/>
                <field name="state" invisible="1" filters="1"/>
            </calendar>
        </field>
    </record>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'done'" decoration-danger="state == 'cancel'"
                  decoration-warning="state == 'in_consultation'" decoration-info="state == 'draft'">
                <header>
                    <button name="action_in_consultation" string="In Consultation" type="object" class="oe_highlight"/>
                </header>
                <field name="patient_id"/>
                <field name="appointment_time"/>
                <field name="gender" decoration-it="1" decoration-success="1"/>
                <field name="booking_date"/>
                <field name="ref" optional="hide"/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <field name="state"
                       decoration-success="state== 'done'"
                       decoration-info="state== 'draft'"
                       decoration-danger="state== 'cancel'"
                       decoration-warning="state== 'in_consultation'"
                       widget="badge"/>
                <button name="action_done_p" type="object" class="fa fa-check btn-success"
                        attrs="{'invisible':[('state', '!=', 'in_consultation')]}"/>
                <button name="action_cancel_o" type="object" class="fa fa-times btn-danger"
                        attrs="{'invisible':[('state', '!=', 'in_consultation')]}"/>
            </tree>
        </field>
    </record>


    <record id="view_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search string="Appointments">
                <field name="patient_id"/>
                <field name="ref"/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                <group expand="1" string="Group By">
                    <!--                    <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>-->
                    <filter string="State" name="state" context="{'group_by':'state'}"/>

                </group>
            </search>
        </field>
    </record>


    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form,search,calendar</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient!
            </p>
        </field>
    </record>

    <menuitem id="menu_appointment"
              name="Appointment"
              action="action_hospital_appointment"
              parent="menu_hospital_root"
              sequence="10"/>
</odoo>