<odoo>
    <record model="ir.module.category" id="module_category_car">
        <field name="name">Car Repair Managment</field>
        <field name="description">Helps you to manage the record</field>
        <field name="sequence">10</field>
    </record>
    <record id="group_technician" model="res.groups">
        <field name="name">Technician</field>
        <field name="category_id" ref="car_repair_workshop.module_category_car"/>
    </record>
    <record id="group_head_technician" model="res.groups">
        <field name="name">Head Technician</field>
        <field name="category_id" ref="car_repair_workshop.module_category_car"/>

    </record>
    <record id="group_service_manager" model="res.groups">
        <field name="name">Service Manager</field>
        <field name="category_id" ref="car_repair_workshop.module_category_car"/>
    </record>
    <record id="group_directore_commercial" model="res.groups">
        <field name="name">Director Commercial</field>
        <field name="category_id" ref="car_repair_workshop.module_category_car"/>
    </record>


    <record id="report_record_rule_work_order" model="ir.rule">
        <field name="name">User can see his / her work order</field>
        <field name="model_id"
               ref="car_repair_workshop.model_work_order"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4, ref ('car_repair_workshop.group_technician'))]"/>
        <field name="domain_force">[('assigned_to1.id', '=', user.id)]
        </field>
    </record>
    <record id="report_record_rule_repair_order" model="ir.rule">
        <field name="name">User can see his / her repair order</field>
        <field name="model_id"
               ref="car_repair_workshop.model_car_repair"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4, ref ('car_repair_workshop.group_technician'))]"/>
        <field name="domain_force">[('assigned_to.id', '=', user.id)]
        </field>
    </record>
    <record id="report_record_rule_diagosis_order" model="ir.rule">
        <field name="name">User can see his / her repair order</field>
        <field name="model_id"
               ref="car_repair_workshop.model_car_diagnosis"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4, ref ('car_repair_workshop.group_technician'))]"/>
        <field name="domain_force">[('technician.id', '=', user.id)]
        </field>
    </record>

    <record id="REPORT_record_rule_manager" model="ir.rule">
        <field name="name">Admin can see All Report</field>
        <field name="model_id"
               ref="car_repair_workshop.model_car_repair"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups"
               eval="[(4, ref ('car_repair_workshop.group_directore_commercial'))]"/>
        <field name="domain_force">[(1, '=',1)]</field>
    </record>
    <record id="report_record_rule_work_order1" model="ir.rule">
        <field name="name">User can see his / her work order</field>
        <field name="model_id"
               ref="car_repair_workshop.model_work_order"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4, ref ('car_repair_workshop.group_directore_commercial'))]"/>
        <field name="domain_force">[(1, '=',1)]
        </field>
    </record>
</odoo>