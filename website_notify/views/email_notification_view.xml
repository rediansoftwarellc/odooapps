<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="customer_emails_notify_form_view_id">
            <field name="name">Customer Information</field>
            <field name="model">customer.email.notification</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="product_id" string="Product Name"/>
                            <field name="company_id" readonly="1"/>
                            <field name="p_url"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="customer_emails_notify_tree_view_id">
            <field name="name">Customer Information</field>
            <field name="model">customer.email.notification</field>
            <field name="arch" type="xml">
                <tree string="Customer Information">
                    <field name="name"/>
                    <field name="product_id" string="Product Name"/>
                </tree>
            </field>
        </record>

        <record id="action_customer_email_notify_id" model="ir.actions.act_window">
            <field name="name">Customer Information</field>
            <field name="res_model">customer.email.notification</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_customer_email_notify_id" name="To Be Notify" parent="website_sale.menu_catalog"
                  sequence="5" action="action_customer_email_notify_id"/>
    </data>
</odoo>