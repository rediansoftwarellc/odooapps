<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="assets_frontend" inherit_id="website.assets_frontend" name="shop">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/website_notify/static/src/js/email_notify.js"></script>
            </xpath>
       </template>

        <template id="product_Qty_availability_on_fronted_website" inherit_id="website_sale.products_item">
            <xpath expr="//form/div[@class='card-body p-1 oe_product_image']" position="before">
            	<t t-if="product.sudo().qty_available &gt; 0">
                    <div style="background: #2f7734; width: 75px; text-align: center; border-radius: 3px; color: white;
                                position: absolute; height: 21px; font-size: 14px; box-shadow: 5px 5px 2px 0px rgba(0,0,0,0.75);">
		                In Stock
	            	</div>
            	</t>
            	<t t-if="product.sudo().qty_available &lt;= 0">
                    <div style="background: red;width:90px;text-align: center;border-radius: 3px;color: white;position: absolute;height: 21px;font-size: 14px;box-shadow: 5px 5px 2px 0px rgba(0,0,0,0.75);">
		                Out of Stock
	            	</div>
            	</t>
            </xpath>
<!--            <xpath expr="//div[@class='product_price']" position="inside">-->
<!--            	<t t-if="product.sudo().qty_available &gt; 0">-->
<!--            	    <u><span  t-esc="product.sudo().qty_available" style="margin-left:5px"/> Units Left</u>-->
<!--            	</t>-->
<!--            </xpath>-->
        </template>

		<template id="product_stock_notify_on_backend_site" inherit_id="website_sale.product_quantity">
            <xpath expr="//a[@id='add_to_cart']" position="before">
                <t t-if="product.sudo().qty_available &lt;= 0">
                    <div style="margin-top: 17px; background: red; width: 110px; text-align: center; border-radius: 5px;
                                color: white; position: relative; height: 25px; font-size: 17px; box-shadow: 5px 5px 2px 0px rgba(0,0,0,0.75);">
                        Out of Stock
                    </div>
                    <div class="notify_msg" style="display:none; margin-top:9px; color:#191919;">
                        <strong>Thank you for your interest this product.You will be notified on this email when the product will be available!</strong>
                    </div>
                    <div style="color:#3c763d; margin-top:9px" class="notify_me">
                        <strong>Notify me when this product is Available!</strong>
                    </div>
                    <input class="btn-primary" id="email_notification" type="button" value="NOTIFY" style="width: 80px; height: 33.3px; position: relative;
                                  left: 240px; border-radius: 6px"></input>
                    <input type="email" t-att-value="email" name="email" id="email" class="form-control" style="width:236px;border-color:#f44256;margin-top:-33.5px"
                           placeholder="mycompany@example.com" required='True'/>
                    <input type="hidden" name="product" id="p_name" t-att-value="product.id"/>
	            </t>
	        </xpath>
        </template>

        <template id="thank" name="thank">
            <t t-call="website.layout">
                <div class="oe_structure">
                    <div class="container" style='padding:30px'>
                        hello
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>