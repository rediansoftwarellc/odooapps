<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Email template -->
        <record id="customer_email_template_product_notify" model="mail.template">
            <field name="name">In Stock - Send by Email</field>
            <field name="email_from">${(object.company_id.email or user.email)|safe}</field>
            <field name="subject">Requested product : ${object.product_id.name} is available now</field>
            <field name="email_to">${object.name}</field>
            <field name="model_id" ref="website_notify.model_customer_email_notification"/>
            <field name="lang">${user.partner_id.lang}</field>
            <field name="body_html">
                <![CDATA[
                    <p>Dear Customer,</p>
		            <p>Thank you for your interest in this product: "${object.product_id.name}" now its available in our site .So you can buy any time.</p>
		            <div style="text-align: center; margin-top: 16px;">
                        <a href="${object.p_url}" style="padding: 5px 10px; font-size: 12px; line-height: 18px; color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B; border: 1px solid #875A7B; border-radius:3px">Open Product</a>
                    </div>
                ]]>
            </field>
        </record>

    </data>
</odoo>
