<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="warranty_team_form_view" model="ir.ui.view">
        <field name="name">warranty.team.form</field>
        <field name="model">warranty.team</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="team_leader_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="warranty_team_tree_view_id" model="ir.ui.view">
        <field name="name">warranty.team.tree</field>
        <field name="model">warranty.team</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="team_leader_id"/>
            </tree>
        </field>
    </record>

    <record id="action_warranty_team" model="ir.actions.act_window">
        <field name="name">Product Warranty Team Details</field>
        <field name="res_model">warranty.team</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Warranty Team" id="sub_warranty_teams_ids5" parent="sub_menu_configuration_ids5" sequence="6"
              action="action_warranty_team"/>
</odoo>
