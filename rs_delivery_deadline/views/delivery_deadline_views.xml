<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--  Add delivery date & deadline date in stock.move  -->
    <record id="stock_move_form_view_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='operations']/field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="delivery_date"/>
                <field name="deadline_date"/>
            </xpath>
        </field>
    </record>

    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@class='oe_stat_button'][1]" position="after">
                <button name="view_mrp_action" type="object" class="oe_stat_button" icon="fa-solid fa-wrench"
                        attrs="{'invisible': [('manufacturing_count', '=', 0)]}">
                    <field name="manufacturing_count" widget="statinfo"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="mrp_id" readonly="1" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_mrp_production_form_inherit" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="sale_order_line"/>
                <field name="order_id"/>
                <field name="delivery_date"/>
                <field name="deadline_date"/>
            </xpath>
            <xpath expr="//page[@name='components']/field[@name='move_raw_ids']/tree/field[@name='product_id']" position="after">
                <field name="location_id"/>
            </xpath>
        </field>
    </record>
</odoo>
