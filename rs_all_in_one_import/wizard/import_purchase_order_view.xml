<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_purchase_wizard_form" model="ir.ui.view">
            <field name="name">purchase.wizard.form</field>
            <field name="model">import.purchase.order</field>
            <field name="arch" type="xml">
                <form string="Purchase Wizard">
                    <sheet>
                        <field name="flag" invisible="1"/>
                        <group col="2">
                            <group attrs="{'invisible':[('flag','=',True)]}">
                                <field name="file_type" widget="radio" options="{'vertical': true}"/>
                            </group>
                            <group attrs="{'invisible':[('flag','=',True)]}">
                                <field name="purchase_stage_option" widget="radio" options="{'vertical': true}"/>
                            </group>
                        </group>
                        <group col="2">
                            <group attrs="{'invisible':[('flag','=',True)]}">
                                <field name="sequence_option" widget="radio" options="{'vertical': true}"/>
                                <field name="import_product_by" widget="radio" options="{'vertical': true}"/>
                            </group>
                        </group>
                        <group attrs="{'invisible':[('flag','=',True)]}">
                            <field name="file" filename="filename"/>
                        </group>
                        <group attrs="{'invisible':[('flag','=',False)]}">
                            <field name="filename" invisible="1" readonly="1"/>
                            <field name="file_xls" filename="filename"/>
                        </group>
                    </sheet>
                    <footer>
                        <div class="oe_form_buttons">
                            <div style="float: left;">
                                <button string="Import" name="import_purchase_order" type="object" class="btn-primary"/>
                            </div>
                            <div style="float: right;">
                                <label string="Download Sample :" for="file" class="o_form_label"
                                       style="font-weight: bold; font-size: 16px;"/>
                                <span style="margin-right: 10px;"></span>
                                <button name="export_csv_purchase_order" string="CSV File" type="object"
                                        class="oe_highlight"
                                        icon="fa-download"/>
                                <span style="margin-right: 10px;"></span>
                                <button name="export_excel_purchase_order" string="Excel File" type="object"
                                        class="oe_highlight" icon="fa-download"/>
                            </div>
                            <div style="clear: both;"></div>
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="purchase_wizard_action" model="ir.actions.act_window">
            <field name="name">Import Purchase</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">import.purchase.order</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_orders_import_purchase" name="Import Purchase" parent="purchase.menu_procurement_management"
                  action="purchase_wizard_action"/>
    </data>
</odoo>