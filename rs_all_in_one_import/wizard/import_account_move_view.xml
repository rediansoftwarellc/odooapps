<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- View for AccountWizard -->
        <record id="view_account_wizard_form" model="ir.ui.view">
            <field name="name">account.wizard.form</field>
            <field name="model">import.account.move</field>
            <field name="arch" type="xml">
                <form string="Import Invoice">
                    <sheet>
                        <field name="flag" invisible='1'/>
                        <group>
                            <group attrs="{'invisible':[('flag','=',True)]}">
                                <field name="file_type" widget="radio"/>
                                <separator/>
                                <separator/>
                                <field name="type" widget="radio"/>
                                <separator/>
                                <separator/>
                                <field name="sequence_option" widget="radio"/>
                                <separator/>
                                <separator/>
                                <separator/>
                                <separator/>
                            </group>
                            <group attrs="{'invisible':[('flag','=',True)]}">
                                <field name="file"/>
                                <separator/>
                                <separator/>
                                <field name="invoice_stage_option" widget="radio"/>
                                <separator/>
                                <separator/>
                                <field name="account_option" widget="radio" invisible="1"/>
                                <separator/>
                                <field name="import_product_by" widget="radio"/>
                            </group>
                            <group attrs="{'invisible':[('flag','=',False)]}">
                                <field name="filename" invisible="1" readonly="1"/>
                                <field name="file_xls" filename="filename"/>
                                <field name="file_csv" filename="filename"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <div class="oe_form_buttons">
                            <div style="float: left;">
                                <button name="import_button" string="Import" type="object" class="oe_highlight"/>
                            </div>
                            <div style="float: right;">
                                <label string="Download Sample :" for="file" class="o_form_label"
                                       style="font-weight: bold; font-size: 16px;"/>
                                <span style="margin-right: 10px;"/>
                                <button name="download_csv_button" string="CSV File" type="object" class="oe_highlight"
                                        icon="fa-download"/>
                                <span style="margin-right: 10px;"/>
                                <button name="download_excel_button" string="Excel File" type="object"
                                        class="oe_highlight" icon="fa-download"/>
                            </div>
                            <div style="clear: both;"/>
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="account_wizard_action" model="ir.actions.act_window">
            <field name="name">Import Invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">import.account.move</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_customers_import_invoice" name="Import Invoice" action="account_wizard_action"
                  parent="account.menu_finance_receivables" sequence="20"/>
    </data>
</odoo>


