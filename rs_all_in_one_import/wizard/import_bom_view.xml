<odoo>
    <data>
        <!-- View for AccountWizard -->
        <record id="view_mrp_wizard_form" model="ir.ui.view">
            <field name="name">mrp.wizard.form</field>
            <field name="model">import.bom</field>
            <field name="arch" type="xml">
                <form string="Purchase Wizard">
                    <sheet>
                        <field name="flag" invisible="1"/>
                        <group col="2">
                            <group attrs="{'invisible':[('flag','=',True)]}">
                                <field name="file_type" widget="radio" options="{'vertical': true}"/>

                            </group>
                            <group attrs="{'invisible':[('flag','=',True)]}">
                                <field name="bom_type" widget="radio" options="{'vertical': true}"/>
                            </group>
                        </group>
                        <group col="2">
                            <group attrs="{'invisible':[('flag','=',True)]}">
                                <field name="import_product_by" widget="radio" options="{'vertical': true}"/>
                            </group>
                            <group>
                                <field name="import_material_product_by" widget="radio" options="{'vertical': true}"/>
                            </group>
                        </group>
                        <group>
                            <field name="file" filename="filename"/>
                        </group>
                        <group attrs="{'invisible':[('flag','=',False)]}">
                            <field name="filename" invisible="1" readonly="1"/>
                            <field name="file_xls" filename="filename"/>
                        </group>
                    </sheet>
                    <footer>
                        <div class="oe_form_buttons">
                            <div style="float: left;">
                                <button string="Import" name="import_mrp_bom" type="object" class="btn-primary"/>
                            </div>
                            <div style="float: right;">
                                <label string="Download Sample :" for="file" class="o_form_label"
                                       style="font-weight: bold; font-size: 16px;"/>
                                <span style="margin-right: 10px;"></span>
                                <button name="export_csv_mrp_bom" string="CSV File" type="object"
                                        class="oe_highlight"
                                        icon="fa-download"/>
                                <span style="margin-right: 10px;"></span>
                                <button name="export_excel_mrp_bom" string="Excel File" type="object"
                                        class="oe_highlight" icon="fa-download"/>
                            </div>
                            <div style="clear: both;"></div>
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="mrp_wizard_action" model="ir.actions.act_window">
            <field name="name">Import Bom</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">import.bom</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_orders_import_bom" name="Import Bom" parent="mrp.menu_mrp_bom" action="mrp_wizard_action"/>
    </data>
</odoo>