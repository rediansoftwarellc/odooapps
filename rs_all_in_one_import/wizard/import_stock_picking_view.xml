<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- View for AccountWizard -->
        <record id="view_account_wizard_form" model="ir.ui.view">
            <field name="name">inventory.wizard.form</field>
            <field name="model">import.stock.picking</field>
            <field name="arch" type="xml">
                <form string="Import Invoice">
                    <sheet>
                        <group>
                            <field name="file_type" widget="radio"/>
                            <field name="file"/>
                            <field name="picking_type"/>
                            <field name="import_product_by" widget="radio"/>
                            <field name="source_location_zone"/>
                            <field name="dest_location_zone"/>
                        </group>
                    </sheet>
                    <footer>
                        <div class="oe_form_buttons">
                            <div style="float: left;">
                                <button name="import_button" string="Import" type="object" class="oe_highlight"/>
                            </div>
                            <div style="float: right;">
                                <label string="Download Sample :" for="file" class="o_form_label"
                                       style="font-weight: bold; font-size: 16px;"/>
                                <span style="margin-right: 10px;"/>
                                <button name="download_csv_button" string="CSV File" type="object" class="oe_highlight"
                                        icon="fa-download"/>
                                <span style="margin-right: 10px;"/>
                                <button name="download_excel_button" string="Excel File" type="object"
                                        class="oe_highlight" icon="fa-download"/>
                            </div>
                            <div style="clear: both;"/>
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="inventory_wizard_action" model="ir.actions.act_window">
            <field name="name">Import Inventory</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">import.stock.picking</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_inventory_import_ids" name="Import Shipment and Delivery Orders" sequence="60"
                  action="inventory_wizard_action" parent="stock.menu_stock_warehouse_mgmt"/>
    </data>
</odoo>

