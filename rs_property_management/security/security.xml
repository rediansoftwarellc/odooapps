<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.module.category" id="module_property">
        <field name="name">Property</field>
        <field name="description">Helps you to manage the Property</field>
        <field name="sequence">10</field>
    </record>
    <record id="group_property_manager" model="res.groups">
        <field name="name">Property Manager</field>
        <field name="category_id" ref="01__property__management.module_property"/>
    </record>
    <record id="group_tenant" model="res.groups">
        <field name="name">Tenant</field>
        <field name="category_id" ref="01__property__management.module_property"/>

    </record>
    <record id="tenant_record_rule" model="ir.rule">
        <field name="name">Tenant</field>
        <field name="model_id" ref="model_property_select"/>
        <field name="groups" eval="[(4, ref ('group_tenant'))]"/>
        <field name="domain_force">[('available_for','=','rental')]</field>
    </record>
        <record id="group_buyer" model="res.groups">
        <field name="name">Buyer</field>
        <field name="category_id" ref="01__property__management.module_property"/>
    </record>
    <record id="buyer_record_rule" model="ir.rule">
        <field name="name">Buyer </field>
        <field name="model_id" ref="model_property_select"/>
        <field name="groups" eval="[(4, ref ('group_buyer'))]"/>
        <field name="domain_force">[('available_for','=','sale')]</field>
    </record>
</odoo>