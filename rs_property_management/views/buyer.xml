<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="buyer_search" model="ir.ui.view">
        <field name="name">buyer.search</field>
        <field name="model">property.buyer</field>
        <field name="arch" type="xml">
            <search>
                <field name="city" string="City" filter_domain="[('city','ilike',self)]"/>
                <field name="pincode" string="Pincode" filter_domain="[('pincode','ilike',self)]"/>
                <group expand="1" string="Group by">
                    <filter name="city" string="City" context="{'group_by':'city'}"/>
                    <filter name="pincode" string="Pincode" context="{'group_by':'pincode'}"/>
                    <filter name="state" string="State" context="{'group_by':'state'}"/>
                    <filter name="country" string="Country" context="{'group_by':'country'}"/>
                    <filter name="Indian" string="Indian" domain="[('Indian','=',True)]"/>
                    <filter name="Indian" string="NRI" domain="[('Indian','=',False)]"/>
                </group>
            </search>
        </field>
    </record>
    <record id="buyer_tree" model="ir.ui.view">
        <field name="name">buyer.tree</field>
        <field name="model">property.buyer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="buyer_name"/>
                <field name="age"/>
                <field name="contact_no"/>
                <field name="email"/>
                <field name="UID"/>
                <field name="PAN"/>
                <field name="Indian"/>
                <field name="address"/>
                <field name="state"/>
                <field name="city"/>
                <field name="pincode"/>
                <field name="country"/>
            </tree>
        </field>
    </record>
    <record id="buyer_form" model="ir.ui.view">
        <field name="name">buyer.form</field>
        <field name="model">property.buyer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="buyer_name"/>
                            <field name="age"/>
                            <field name="contact_no"/>
                            <field name="email" placeholder="xyz@gmail.com"/>
                            <field name="UID" placeholder="Enter the Aadhaar no"/>
                            <field name="PAN" placeholder="Enter the PAN Card no"/>
                        </group>
                        <group>
                            <field name="Indian"/>
                            <field name="address" placeholder="Full Address"/>
                            <field name="state" placeholder="Name of the State"/>
                            <field name="city" placeholder="Name of the City"/>
                            <field name="pincode"/>
                            <field name="country" placeholder=" Country Name"
                                   attrs="{'invisible': [('Indian','=',True)]}"/>
                        </group>
                        <group>
                            <field name="agree"/>
                        </group>
                    </group>
                    <button id="button_confirm" name="action_open_to_buy" string="BUY NOW"
                            class="btn-primary"
                            type="object"
                            icon="fa-building-o"
                            confirm="Click OK to Confirm"
                            style="margin-left:550px;"/>
                </sheet>
            </form>
        </field>
    </record>
    <record id="buyer_action" model="ir.actions.act_window">
        <field name="name">Buyers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">property.buyer</field>
        <field name="view_mode">tree,form,search,kanban,graph</field>
        <field name="help" type="html">
            <p class="buyer_view">Create Buyer Details.</p>
        </field>
    </record>
    <menuitem id="buyer_root" name="Buyer" parent="property_root_2" action="buyer_action"
              sequence="10"/>
</odoo>
