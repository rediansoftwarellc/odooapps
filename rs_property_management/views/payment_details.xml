<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_details_search" model="ir.ui.view">
        <field name="name">payment.details.search</field>
        <field name="model">property.payment.details</field>
        <field name="arch" type="xml">
            <search>
                <field name="property_name1" string="Property Name" filter_domain="[('property_name1','ilike',self)]"/>
            </search>
        </field>
    </record>
    <record id="payment_details_tree" model="ir.ui.view">
        <field name="name">payment.details.tree</field>
        <field name="model">property.payment.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="property_name1"/>
                <field name="monthly_rent1"/>
                <field name="yearly_rent1"/>
                <field name="total_area1"/>
                <field name="price_perFT1"/>
                <field name="sale_price1"/>
            </tree>
        </field>
    </record>
    <record id="payment_details_form" model="ir.ui.view">
        <field name="name">payment.details.form</field>
        <field name="model">property.payment.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="property_name1" option="{'no_create': True}"/>
                            <field name="monthly_rent1"/>
                            <field name="yearly_rent1"/>
                        </group>
                        <group>
                            <field name="total_area1"/>
                            <field name="price_perFT1"/>
                            <field name="sale_price1"/>
                        </group>
                    </group>
                    <button id="button_confirm" name="action_open_all_property_sale"
                            string='See Another Sale Properties'
                            class="btn-primary"
                            icon="fa-building-o"
                            type="object"
                            style="margin-right:10px;"
                            groups="01__property__management.group_buyer"/>
                    <button id="button_confirm" name="action_open_all_property_rental"
                            string='See Another Rental Properties'
                            class="btn-primary"
                            icon="fa-building-o"
                            type="object"
                            style="margin-right:10px;"
                            groups="01__property__management.group_tenant"/>
                    <button id="button_confirm" name="action_to_payment"
                            string='Go For Pyment'
                            class="btn-primary"
                            icon="fa-money"
                            type="object"
                            style="margin-right:10px;"/>
                </sheet>
            </form>
        </field>
    </record>
    <record id="payment_details_action" model="ir.actions.act_window">
        <field name="name">Payment Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">property.payment.details</field>
        <field name="view_mode">tree,form,search,kanban,graph</field>
        <field name="help" type="html">
            <p class="payment.details_view">select your property first!.....</p>
        </field>
    </record>
    <menuitem id="payment_root" name="Payment Details" parent="property_root" action="payment_details_action"
              sequence="10"/>
</odoo>
